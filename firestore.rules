
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // A user can read and write to their own user document.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // A user can create an organization if their UID is the owner.
    // A user can read, update, or delete an organization if they are a member.
    match /organizations/{orgId} {
      allow create: if request.auth.uid == request.resource.data.owner.uid;
      allow read, delete: if request.auth.uid in resource.data.memberUids;
      allow update: if request.auth.uid in resource.data.memberUids 
                    && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['members', 'memberUids', 'owner', 'planId', 'usage', 'subscriptionId', 'subscriptionStatus']));
      
      // Allow access to triggers subcollection if user is a member of the parent organization
      match /triggers/{triggerId} {
        allow read, write: if request.auth.uid in get(/databases/$(database)/documents/organizations/$(orgId)).data.memberUids;
        
        match /logs/{logId} {
             allow read: if request.auth.uid in get(/databases/$(database)/documents/organizations/$(orgId)).data.memberUids;
        }
      }
    }
  }
}
